<Window x:Class="GUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TryOn - Iniciar Sesión" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" 
        Background="{StaticResource BackgroundBrush}">
    <Grid Margin="0,0,0,-6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <StackPanel Grid.Row="0" Margin="0,30,0,20">
            <TextBlock Text="TryOn" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center" Foreground="{StaticResource PrimaryBrush}"/>
            <TextBlock Text="Sistema de Gestión de Inventario" FontSize="16" HorizontalAlignment="Center" Margin="0,5,0,0" Foreground="{StaticResource TextBrush}"/>
        </StackPanel>

        <!-- Formulario de inicio de sesión -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Margin="30,0,30,10" Padding="20">
            <StackPanel>
                <TextBlock Text="Iniciar Sesión" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="Email" Margin="0,0,0,5"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>

                <TextBlock Text="Contraseña" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"/>

                <Button x:Name="btnLogin" Content="Iniciar Sesión" Margin="0,0,0,15" Click="btnLogin_Click"/>

                <TextBlock HorizontalAlignment="Center">
                    <Hyperlink x:Name="lnkRegistrar" Click="lnkRegistrar_Click">¿No tienes cuenta? Regístrate aquí</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Pie de página -->
    </Grid>
</Window>