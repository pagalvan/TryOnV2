<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TryOn - Sistema de Gestión de Inventario" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen" 
        Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Menú lateral -->
        <Border Grid.Column="0" Background="{StaticResource PrimaryBrush}">
            <DockPanel>
                <!-- Encabezado del menú -->
                <StackPanel DockPanel.Dock="Top" Margin="20,30,20,30">
                    <Image Source="/Resources/logo.png" Stretch="Fill" Height="113" Width="110"/>
                    <TextBlock x:Name="txtUsuarioNombre" Text="Bienvenido, Usuario" FontSize="14" Foreground="White" Opacity="0.8" Margin="0,5,0,0" Width="183"/>
                </StackPanel>

                <!-- Opciones del menú -->
                <StackPanel DockPanel.Dock="Top" Margin="0,20,0,0">
                    <Button x:Name="btnInventario" Content="Gestión de Inventario" Margin="10,5" Background="Transparent" BorderThickness="0" 
                            HorizontalContentAlignment="Left" Padding="15,10" Foreground="White" Click="btnInventario_Click"/>

                    <Button x:Name="btnCatalogo" Content="Catálogo de Productos" Margin="10,5" Background="Transparent" BorderThickness="0" 
                            HorizontalContentAlignment="Left" Padding="15,10" Foreground="White" Click="btnCatalogo_Click"/>

                    <Button x:Name="btnVentas" Content="Ventas y Pedidos" Margin="10,5" Background="Transparent" BorderThickness="0" 
                            HorizontalContentAlignment="Left" Padding="15,10" Foreground="White" Click="btnVentas_Click"/>

                    <Button x:Name="btnReportes" Content="Reportes" Margin="10,5" Background="Transparent" BorderThickness="0" 
                            HorizontalContentAlignment="Left" Padding="15,10" Foreground="White" Click="btnReportes_Click"/>

                    <Button x:Name="btnUsuarios" Content="Gestión de Usuarios" Margin="10,5" Background="Transparent" BorderThickness="0" 
                            HorizontalContentAlignment="Left" Padding="15,10" Foreground="White" Click="btnUsuarios_Click"/>
                </StackPanel>

                <!-- Pie del menú -->
                <StackPanel DockPanel.Dock="Bottom" Margin="20,0,20,20">
                    <Separator Background="#FFFFFF" Opacity="0.2" Margin="0,0,0,10"/>
                    <Button x:Name="btnCerrarSesion" Content="Cerrar Sesión" Background="Transparent" BorderThickness="0" 
                            Foreground="White" HorizontalContentAlignment="Left" Click="btnCerrarSesion_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Contenido principal -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <Border Grid.Row="0" Background="White" BorderBrush="#EEEEEE" BorderThickness="0,0,0,1" Padding="20,15">
                <Grid>
                    <TextBlock x:Name="txtTituloPagina" Text="Panel Principal" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <!-- Área de contenido -->
            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" Background="White" Margin="20"/>
        </Grid>
    </Grid>
</Window>